# project *hello* should compile properly when executing the build script

fixture testgen

build_or_fail target/test-bin/calc/{passes,fails}

directory_must_exist target
file_must_exist target/test-bin/calc/passes
file_must_exist target/test-bin/calc/fails
strings_must_equal \
  "When running passing test" \
  "$(target/test-bin/calc/passes)" ""

strings_must_equal \
  "When running failing test" \
  "$(target/test-bin/calc/fails 2>&1)" "fails on purpose = -1"
